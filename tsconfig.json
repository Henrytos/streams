{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",

  "compilerOptions": {
    "lib": ["es2024"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
 "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}
