{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",

  "compilerOptions": {
    "lib": ["es2024"],
    "module": "nodenext",
    "target": "es2024",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
